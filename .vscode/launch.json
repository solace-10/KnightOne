    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Windows)",
            "type":"cppvsdbg",
            "request":"launch",
            "program": "${workspaceRoot}/game/bin/game.exe",
            "cwd":"${workspaceRoot}/game/bin"
        },
        {
            "name": "Launch (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/game/bin/game",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/game/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Launch Forge (Windows)",
            "type":"cppvsdbg",
            "request":"launch",
            "program": "${workspaceRoot}/forge/bin/forge.exe",
            "cwd":"${workspaceRoot}/forge/bin"
        },
    ]
}