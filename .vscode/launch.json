    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Windows)",
            "type":"cppvsdbg",
            "request":"launch",
            "program": "${workspaceRoot}/game/bin/game.exe",
            "cwd":"${workspaceRoot}/game/bin"
        },
        {
            "name": "Launch Manifest Generator (Windows)",
            "type":"cppvsdbg",
            "request":"launch",
            "program": "${workspaceRoot}/pandora/tools/manifest_generator/bin/manifest_generator.exe",
            "cwd":"${workspaceRoot}/pandora/tools/manifest_generator/bin/",
            "args": [ "${workspaceRoot}/game/bin" ]
        },
    ]
}