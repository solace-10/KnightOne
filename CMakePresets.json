{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "core",
            "hidden": true,
            "binaryDir": "build/${presetName}"
        },
        {
            "name": "native",
            "hidden": true,
            "cacheVariables": {
                "TARGET_PLATFORM_NATIVE": "ON"
            }
        },
        {
            "name": "windows",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "TARGET_PLATFORM_WINDOWS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": [
                "native"
            ]
        },
        {
            "name": "linux",
            "hidden": true,
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "TARGET_PLATFORM_LINUX": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "inherits": [
                "native"
            ]
        },
        {
            "name": "web",
            "hidden": true,
            "generator": "Ninja",
            "toolchainFile": "pandora/ext/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
            "cacheVariables": {
                "TARGET_PLATFORM_WEB": "ON"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "debug-windows",
            "displayName": "Debug (Windows)",
            "inherits": [
                "core",
                "debug",
                "windows"
            ]
        },
        {
            "name": "debug-linux",
            "displayName": "Debug (Linux)",
            "inherits": [
                "core",
                "debug",
                "linux"
            ]
        },
        {
            "name": "debug-web",
            "displayName": "Debug (Web)",
            "inherits": [
                "core",
                "debug",
                "web"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "core",
            "configurePreset": "core",
            "hidden": true,
            "jobs": 16,
            "targets": [
                "game"
            ]
        },
        {
            "name": "native",
            "hidden": true,
            "configurePreset": "native",
            "inherits": [
                "core"
            ],
            "targets": [
                "game",
                "manifest_generator"
            ]
        },
        {
            "name": "debug-windows",
            "description": "Build The Brightest Star in Debug",
            "displayName": "Debug (Windows)",
            "configurePreset": "debug-windows",
            "inherits": [
                "native"
            ]
        },
        {
            "name": "debug-linux",
            "description": "Build The Brightest Star in Debug",
            "displayName": "Debug (Linux)",
            "configurePreset": "debug-linux",
            "inherits": [
                "native"
            ]
        },
        {
            "name": "debug-web",
            "description": "Build The Brightest Star in Debug",
            "displayName": "Debug (Web)",
            "configurePreset": "debug-web",
            "inherits":[
                "core"
            ]
        }
    ]
}